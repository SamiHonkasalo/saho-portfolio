---
import { Technologies } from "../utils/config";
---

<div class="grid w-full grid-cols-1 gap-6 p-6 sm:grid-cols-2 lg:grid-cols-3">
  {
    Technologies.map((tech) => {
      return (
        <div class="flex flex-col items-center rounded-lg bg-white p-4 pb-12 text-zinc-800 shadow-xl [&>svg]:h-24 [&>svg]:w-24 [&>svg]:fill-zinc-900">
          <p class="mb-6 text-xl font-bold">{tech.name}</p>
          <Fragment set:html={tech.icon} />
        </div>
      );
    })
  }
</div>
